{
  "name": "@agoric/notifier",
  "version": "0.5.1",
  "description": "Notifier allows services to update clients about state changes using a stream of promises",
  "type": "module",
  "main": "src/index.js",
  "engines": {
    "node": ">=14.15.0"
  },
  "scripts": {
    "build": "exit 0",
    "prepack": "echo \"export {}; \" | cat - src/types-ambient.js > src/types.js && tsc --build jsconfig.build.json",
    "postpack": "git clean -f '*.d.ts*' src/types.js",
    "test": "ava",
    "test:c8": "c8 $C8_OPTIONS ava --config=ava-nesm.config.js",
    "test:xs": "exit 0",
    "lint-fix": "yarn lint:eslint --fix",
    "lint": "run-s --continue-on-error lint:*",
    "lint:eslint": "eslint .",
    "lint:types": "tsc -p jsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Agoric/agoric-sdk.git"
  },
  "keywords": [
    "notifier"
  ],
  "author": "Agoric",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Agoric/agoric-sdk/issues"
  },
  "homepage": "https://github.com/Agoric/agoric-sdk#readme",
  "dependencies": {
    "@agoric/assert": "^0.5.1",
    "@agoric/internal": "^0.2.1",
    "@agoric/store": "^0.8.3",
    "@agoric/swingset-vat": "^0.30.2",
    "@agoric/swing-store": "^0.8.1",
    "@agoric/vat-data": "^0.4.3",
    "@endo/far": "^0.2.14",
    "@endo/marshal": "^0.8.1",
    "@endo/promise-kit": "^0.2.52"
  },
  "devDependencies": {
    "@endo/init": "^0.5.52",
    "@endo/ses-ava": "^0.2.36",
    "ava": "^5.1.0",
    "c8": "^7.12.0"
  },
  "exports": {
    ".": "./src/index.js",
    "./exported.js": "./exported.js",
    "./subscribe.js": "./subscribe.js",
    "./tools/testSupports.js": "./tools/testSupports.js"
  },
  "files": [
    "src/",
    "tools/",
    "*.js",
    "NEWS.md"
  ],
  "eslintIgnore": [
    "bundle-*.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "ava": {
    "files": [
      "test/**/test-*.js"
    ],
    "timeout": "2m"
  }
}
