{
  "name": "@agoric/xsnap",
  "version": "0.13.2",
  "description": "Description forthcoming.",
  "author": "Agoric",
  "license": "Apache-2.0",
  "type": "module",
  "main": "./src/index.js",
  "bin": {
    "ava-xs": "./src/ava-xs.js",
    "xsrepl": "./src/xsrepl"
  },
  "scripts": {
    "repl": "node src/xsrepl.js",
    "build:bin": "if git status >/dev/null 2>&1; then node src/build.js; else yarn build:from-env; fi",
    "build:env": "if git status >/dev/null 2>&1; then node src/build.js --show-env > build.env; fi",
    "build:from-env": "{ cat build.env; echo node src/build.js; } | xargs env",
    "build": "yarn build:bin && yarn build:env",
    "clean": "rm -rf xsnap-native/xsnap/build",
    "lint": "run-s --continue-on-error lint:*",
    "lint:js": "eslint 'src/**/*.js' 'test/**/*.js' api.js",
    "lint:types": "tsc -p jsconfig.json",
    "lint-fix": "eslint --fix 'src/**/*.js' 'test/**/*.js' api.js",
    "test": "ava",
    "test:c8": "c8 $C8_OPTIONS ava --config=ava-nesm.config.js",
    "test:xs": "exit 0"
  },
  "dependencies": {
    "@agoric/assert": "^0.5.1",
    "@agoric/internal": "^0.2.1",
    "@agoric/xsnap-lockdown": "^0.13.2",
    "@endo/bundle-source": "^2.4.2",
    "@endo/eventual-send": "^0.16.8",
    "@endo/init": "^0.5.52",
    "@endo/netstring": "^0.3.22",
    "@endo/promise-kit": "^0.2.52",
    "@endo/stream": "^0.3.21",
    "@endo/stream-node": "^0.2.22",
    "glob": "^7.1.6"
  },
  "devDependencies": {
    "@endo/base64": "^0.2.28",
    "ava": "^5.1.0",
    "c8": "^7.12.0"
  },
  "files": [
    "LICENSE*",
    "api.js",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "ava": {
    "files": [
      "test/**/test-*.js"
    ],
    "timeout": "2m",
    "workerThreads": false
  }
}
